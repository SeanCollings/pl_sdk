{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist-sdk",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "../dist-sdk/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  }
}
